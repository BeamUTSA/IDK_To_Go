<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.idktogo.idk_to_go.controller.MenuController"
      spacing="15" style="-fx-padding: 15; -fx-background-color: #f7f7f7;">

    <stylesheets>
        <URL value="@styles/global.css" />
    </stylesheets>

    <!-- Header with Back Button -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #00BFFF">
        <Button text="â† Back"
                onAction="#goBack" />
        <Label fx:id="restaurantNameLabel" text="Restaurant Menu" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    </HBox>

    <!-- Menu Items List -->
    <ScrollPane fitToWidth="true">
        <VBox fx:id="menuItemsBox" spacing="10" style="-fx-padding: 5;"/>
    </ScrollPane>

    <!-- Add New Menu Item Row -->
    <HBox spacing="10">
        <TextField fx:id="itemNameField" promptText="Item Name" />
        <TextField fx:id="itemPriceField" promptText="Price" />
        <Button text="Add Item" onAction="#addMenuItem"/>
    </HBox>

</VBox>
