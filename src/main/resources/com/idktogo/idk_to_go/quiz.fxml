<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="400" prefHeight="750"
            fx:controller="com.idktogo.idk_to_go.controller.QuizController"
            style="-fx-background-color: #00BFFF;">

    <stylesheets>
        <URL value="@styles/global.css" />
    </stylesheets>

    <!-- Top Bar -->
    <top>
        <BorderPane style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-border-color: #ddd;">
            <left>
                <Button text="â† Back"
                        onAction="#goBack" />
            </left>

            <center>
                <Label text="Food Quiz"
                       style="-fx-font-size: 22px; -fx-font-weight: bold;" />
            </center>
        </BorderPane>
    </top>

    <!-- Center content placeholder -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="40" left="20" right="20" bottom="40"/>
            </padding>

            <Label text="Quiz Feature Coming Soon!"
                   style="-fx-font-size: 18px; -fx-text-fill: #555;" />

            <Button text="Run Sample Quiz"
                    onAction="#generateQuiz" />
        </VBox>
    </center>

</BorderPane>

