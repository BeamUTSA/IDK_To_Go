<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.idktogo.idk_to_go.controller.RestaurantController"
            prefWidth="400" prefHeight="750"
            styleClass="root-pane">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
            <Button text="â† Back" onAction="#goBack" />
            <Label fx:id="nameLabel" text="Restaurant Name" styleClass="title-label" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">

            <ImageView fx:id="logoImage" fitWidth="180" preserveRatio="true" />

            <Label fx:id="categoryLabel" text="Category: ---" styleClass="subtitle-label" />

            <Label fx:id="locationLabel"
                   text="Location"
                   onMouseClicked="#openInMaps"
                   styleClass="link-label" />

            <!-- Scrollable Menu List -->
            <ScrollPane fx:id="menuScroll" fitToWidth="true" prefHeight="350" styleClass="scroll-pane">
                <VBox fx:id="menuList" spacing="10" style="-fx-padding: 5;" />
            </ScrollPane>

        </VBox>
    </center>

    <!-- Like and Dislike Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15;">
            <Button text="ðŸ‘ Like" fx:id="likeButton" onAction="#likeRestaurant" styleClass="like-button" />
            <Button text="ðŸ‘Ž Dislike" fx:id="dislikeButton" onAction="#dislikeRestaurant" styleClass="dislike-button" />
        </HBox>
    </bottom>

</BorderPane>
