<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="httpfx.com/fxml/1"
            fx:controller="com.idktogo.idk_to_go.controller.TrendingController"
            prefWidth="400" prefHeight="750"
            styleClass="root-pane">

    <!-- Top: Back button + Title -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
            <Button text="â† Back" onAction="#goBack" />
            <Label text="Trending" styleClass="title-label" />
        </HBox>
    </top>

    <!-- Subtabs for Weekly / All Time -->
    <center>
        <VBox spacing="12">
            <HBox spacing="8" alignment="CENTER" style="-fx-padding: 10;">
                <Button fx:id="weeklyButton" text="This Week" onAction="#showWeekly" styleClass="tab-button tab-weekly" />
                <Button fx:id="allTimeButton" text="All Time" onAction="#showAllTime" styleClass="tab-button tab-alltime" />
            </HBox>

            <!-- Scrollable Trending List -->
            <ScrollPane fx:id="trendingScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                <VBox fx:id="trendingList" spacing="10" style="-fx-padding: 10;" />
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
