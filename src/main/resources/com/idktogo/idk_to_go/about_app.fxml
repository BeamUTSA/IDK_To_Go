<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.idktogo.idk_to_go.controller.AboutAppController"
            prefWidth="400" prefHeight="750"
            styleClass="root-pane">

    <!-- Removed <stylesheets> block; theme is applied via ThemeManager -->

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
            <Button text="← Back" onAction="#goBack" />
            <Label text="About IDK To Go" styleClass="title-label" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">
            <ImageView fitWidth="120" preserveRatio="true">
                <Image url="@images/IDK_To_Go_Logo.png" />
            </ImageView>

            <Label text="IDK To Go" styleClass="title-label" />

            <Label text="Version 1.0 (Beta)" styleClass="subtitle-label" />

            <TextArea fx:id="infoBox"
                      editable="false"
                      wrapText="true"
                      prefWidth="300"
                      prefHeight="200"
                      styleClass="info-box">
                IDK To Go is a lightweight food recommendation app to help guide hungry minds in
                deciding where to eat next. Whether you’re curious, lazy, or just tired of choices
                — let us narrow it down for you.
            </TextArea>

            <Label text="Developed by: Team IDK" styleClass="subtitle-label" />
        </VBox>
    </center>
</BorderPane>
