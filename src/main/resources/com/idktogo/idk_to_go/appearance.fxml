<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.idktogo.idk_to_go.controller.AppearanceController"
            prefWidth="400" prefHeight="750"
            styleClass="root-pane">

    <!-- Top: Header with Back Button -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
            <Button text="â† Back"
                    onAction="#goBack" />
            <Label text="Appearance" styleClass="title-label" />
        </HBox>
    </top>

    <!-- Center: Theme toggle buttons -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" styleClass="padded-box">
            <Label text="Select Theme Mode" styleClass="subtitle-label" />

            <!-- Toggle Buttons for Theme Selection -->
            <ToggleButton fx:id="lightModeToggle" text="Light Mode"
                          onAction="#switchToLightMode"
                          styleClass="toggle-button" />

            <ToggleButton fx:id="darkModeToggle" text="Dark Mode"
                          onAction="#switchToDarkMode"
                          styleClass="toggle-button" />
        </VBox>
    </center>
</BorderPane>
