<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.idktogo.idk_to_go.controller.EditAccountController"
            prefWidth="400" prefHeight="750"
            styleClass="root-pane">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="toolbar">
            <Button text="â† Back" onAction="#goBack" />
            <Label text="Edit Account" styleClass="title-label" />
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="14" styleClass="padded-box">

            <Label text="Update Account Info" styleClass="subtitle-label" />

            <TextField fx:id="usernameField" promptText="New Username" />
            <TextField fx:id="emailField" promptText="New Email" />
            <HBox spacing="10">
                <TextField fx:id="firstNameField" promptText="First Name" />
                <TextField fx:id="lastNameField" promptText="Last Name" />
            </HBox>
            <PasswordField fx:id="passwordField" promptText="New Password" />

            <Button text="Save Changes" onAction="#saveChanges" />

            <Separator />

            <Label text="Danger Zone" styleClass="danger-label" />

            <Button text="Clear History" onAction="#clearHistory" styleClass="danger-button" />
            <Button text="Delete Account" onAction="#deleteAccount" styleClass="danger-button" />

        </VBox>
    </center>
</BorderPane>
