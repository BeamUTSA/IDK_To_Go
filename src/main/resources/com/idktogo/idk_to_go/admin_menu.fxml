<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.idktogo.idk_to_go.controller.MenuController"
      prefWidth="400" prefHeight="750"
      spacing="15"
      styleClass="root-pane">

    <!-- Header with Back Button -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="toolbar">
        <Button text="â† Back" onAction="#goBack" />
        <Label fx:id="restaurantNameLabel" text="Restaurant Menu" styleClass="title-label" />
    </HBox>

    <!-- Menu Items List -->
    <ScrollPane fitToWidth="true" styleClass="scroll-pane">
        <VBox fx:id="menuItemsBox" spacing="10" styleClass="padded-box" />
    </ScrollPane>

    <!-- Add New Menu Item Row -->
    <HBox spacing="10" styleClass="padded-box">
        <TextField fx:id="itemNameField" promptText="Item Name" />
        <TextField fx:id="itemPriceField" promptText="Price" />
        <Button text="Add Item" onAction="#addMenuItem" />
    </HBox>

</VBox>
